generator client {
    provider = "prisma-client-js"
    binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
    output = "/home/ubuntu/cybersecurity_app/nextjs_space/node_modules/.prisma/client"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id                String             @id @default(cuid())
  name              String?
  email             String             @unique
  emailVerified     DateTime?
  image             String?
  password          String?
  companyName       String?
  role              String             @default("user")
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  accounts          Account[]
  sessions          Session[]
  devices           Device[]
  onboardingSurvey  OnboardingSurvey?
  responsePlans     ResponsePlan[]
  phishingTests     PhishingTest[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Device {
  id          String   @id @default(cuid())
  name        String
  type        String
  os          String?
  lastScan    DateTime?
  status      String   @default("active")
  ipAddress   String?
  macAddress  String?
  location    String?
  notes       String?
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model OnboardingSurvey {
  id                    String   @id @default(cuid())
  userId                String   @unique
  user                  User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  industryType          String
  companySize           String
  currentSecurity       String[]
  primaryConcerns       String[]
  dataTypes             String[]
  complianceRequirements String[]
  budget                String?
  hasITStaff            Boolean  @default(false)
  completedAt           DateTime @default(now())
}

model PhishingReport {
  id              String   @id @default(cuid())
  month           String
  year            Int
  emailsSent      Int
  emailsOpened    Int
  linksClicked    Int
  credentialsEntered Int
  reported        Int
  successRate     Float
  createdAt       DateTime @default(now())
}

model PhishingTest {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  subject         String
  targetEmail     String
  status          String   @default("draft")
  sentAt          DateTime?
  openedAt        DateTime?
  clickedAt       DateTime?
  reportedAt      DateTime?
  testType        String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model SecurityPartner {
  id          String   @id @default(cuid())
  name        String
  category    String
  description String
  website     String?
  logoUrl     String?
  features    String[]
  pricing     String?
  rating      Float?
  createdAt   DateTime @default(now())
}

model ResponsePlan {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  title       String
  incidentType String
  steps       String[]
  contacts    String[]
  priority    String   @default("medium")
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
